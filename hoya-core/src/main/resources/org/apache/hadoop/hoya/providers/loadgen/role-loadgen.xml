  <!--
  Garbage collector
  -->
<configuration>
  <property>
    <name>role.name</name>
    <value>loadgen</value>
  </property>
 
  <property>
    <name>yarn.vcores</name>
    <value>1</value>
  </property>

  <property>
    <name>yarn.memory</name>
    <value>512</value>
  </property>
  
  <property>
    <name>jvm.heapsize</name>
    <value>256M</value>
  </property>

  <property>
    <name>load.worktime</name>
    <value>1</value>
  </property>

  <property>
    <name>load.lifetime</name>
    <value>-1</value>
  </property>

  <property>
    <name>load.pfail</name>
    <value>0</value>
  </property>

  <property>
    <name>load.exitcode</name>
    <value>0</value>
  </property>

  <property>
    <name>load.cpuheavy</name>
    <value>false</value>
  </property>

  <property>
    <name>load.writeheavy</name>
    <value>false</value>
  </property>

  <property>
    <name>load.writeheavy</name>
    <value>false</value>
  </property>

  <property>
    <name>load.seekheavy</name>
    <value>false</value>
  </property>

</configuration>
